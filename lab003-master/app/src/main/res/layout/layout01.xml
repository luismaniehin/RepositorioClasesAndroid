<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lblSaludo1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:background="@color/naranja"
        android:text="@string/SaludoCumpleanios"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/blanco"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/playa"
        app:layout_constraintTop_toBottomOf="@+id/lblSaludo1" />

    <TextView
        android:id="@+id/lblSaludo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/SaludoNombre"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="30dp"
        android:textColor="@color/naranja"
        android:textStyle="bold"
        android:background="@color/naranjaClaro"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/imgFondo" />

    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="10"
        android:rating="5.5"
        android:stepSize="0.5"
        android:layout_marginTop="5dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@+id/lblSaludo2" />

</android.support.constraint.ConstraintLayout>